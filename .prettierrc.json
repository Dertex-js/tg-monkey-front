{
  "singleQuote": true,
  "arrowParens": "always",
  "max-len": ["error", 140, 2],
  "tabWidth": 2,
  "semi": false,
  "useTabs": true,
  "trailingComma": "none",
  "endOfLine": "auto",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^(utils)|^(helpers)",
    "^(UI)",
    "^components/(.*)$",
    "(.props)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
